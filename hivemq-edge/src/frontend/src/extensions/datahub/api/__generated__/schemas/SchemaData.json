{
  "type": "object",
  "description": "Data validation relies on the definition of schemas to interact with policies. The HiveMQ Data Hub supports schema definitions with JSON Schema or Protobuf formats:",
  "required": ["name", "type", "version"],
  "properties": {
    "name": {
      "title": "Name",
      "type": "string",
      "pattern": "^([a-zA-Z_0-9-_])*$"
    },
    "type": {
      "title": "Schema",
      "type": "string",
      "enum": ["JSON", "PROTOBUF"],
      "default": "JSON"
    },
    "version": {
      "title": "Version",
      "type": "string",
      "format": "datahub:version"
    }
  },
  "dependencies": {
    "type": {
      "oneOf": [
        {
          "properties": {
            "type": {
              "enum": ["JSON"]
            },
            "schemaSource": {
              "type": "string",
              "format": "application/schema+json"
            }
          }
        },
        {
          "required": ["messageType"],
          "properties": {
            "type": {
              "enum": ["PROTOBUF"]
            },
            "schemaSource": {
              "type": "string",
              "format": "application/octet-stream"
            },
            "messageType": {
              "type": "string",
              "description": "The name of the message to use for Data Hub, from the source"
            }
          }
        }
      ]
    }
  }
}
