<hivemq>
    <protocol-adapters>
        <simulation>
            <id>my-simulation-protocol-adapter</id>
            <minValue>0</minValue>
            <maxValue>1000</maxValue>
            <minDelay>0</minDelay>
            <maxDelay>1000</maxDelay>
                <pollingIntervalMillis>10</pollingIntervalMillis>
                <maxPollingErrorsBeforeRemoval>9</maxPollingErrorsBeforeRemoval>
                <subscriptions>
                    <subscription>
                        <destination>my/topic</destination>
                        <qos>1</qos>
                        <messageHandlingOptions>MQTTMessagePerSubscription</messageHandlingOptions>
                        <includeTagNames>true</includeTagNames>
                        <includeTimestamp>false</includeTimestamp>
                        <userProperties>
                            <userProperty>
                                <name>my-name</name>
                                <value>my-value</value>
                            </userProperty>
                        </userProperties>
                    </subscription>
                    <subscription>
                        <destination>my/topic/2</destination>
                        <qos>1</qos>
                        <messageHandlingOptions>MQTTMessagePerSubscription</messageHandlingOptions>
                        <includeTagNames>true</includeTagNames>
                        <includeTimestamp>false</includeTimestamp>
                        <userProperties>
                            <userProperty>
                                <name>my-name</name>
                                <value>my-value</value>
                            </userProperty>
                        </userProperties>
                    </subscription>
                </subscriptions>
        </simulation>
    </protocol-adapters>
</hivemq>
