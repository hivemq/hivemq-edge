<hivemq>
    <protocol-adapters>
        <protocol-adapter>
            <adapterId>my-simulation-protocol-adapter</adapterId>
            <protocolId>simulation</protocolId>
            <config>
                <simulationToMqtt>
                    <pollingIntervalMillis>10</pollingIntervalMillis>
                    <maxPollingErrorsBeforeRemoval>9</maxPollingErrorsBeforeRemoval>
                </simulationToMqtt>
                <minValue>0</minValue>
                <maxValue>1000</maxValue>
                <minDelay>0</minDelay>
                <maxDelay>1000</maxDelay>
            </config>
            <fromEdgeMappings>
                <fromEdgeMapping>
                    <topic>my/topic</topic>
                    <maxQos>1</maxQos>
                    <tagName>tag</tagName>
                    <messageHandlingOptions>MQTTMessagePerSubscription</messageHandlingOptions>
                    <includeTagNames>true</includeTagNames>
                    <includeTimestamp>false</includeTimestamp>
                    <mqttUserProperties>
                        <mqttUserProperty>
                            <name>my-name</name>
                            <value>my-value</value>
                        </mqttUserProperty>
                    </mqttUserProperties>
                </fromEdgeMapping>
                <fromEdgeMapping>
                    <topic>my/topic/2</topic>
                    <maxQos>1</maxQos>
                    <tagName>tag</tagName>
                    <messageHandlingOptions>MQTTMessagePerSubscription</messageHandlingOptions>
                    <includeTagNames>true</includeTagNames>
                    <includeTimestamp>false</includeTimestamp>
                    <mqttUserProperties>
                        <mqttUserProperty>
                            <name>my-name</name>
                            <value>my-value</value>
                        </mqttUserProperty>
                    </mqttUserProperties>
                </fromEdgeMapping>
            </fromEdgeMappings>
        </protocol-adapter>
    </protocol-adapters>
</hivemq>
