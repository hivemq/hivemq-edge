<hivemq>
    <protocol-adapters>
        <simulation>
            <id>my-simulation-protocol-adapter</id>
            <minValue>0</minValue>
            <maxValue>1000</maxValue>
            <minDelay>0</minDelay>
            <maxDelay>1000</maxDelay>
            <simulationToMqtt>
                <pollingIntervalMillis>10</pollingIntervalMillis>
                <maxPollingErrorsBeforeRemoval>9</maxPollingErrorsBeforeRemoval>
                <simulationToMqttMappings>
                    <simulationToMqttMapping>
                        <mqttTopic>my/topic</mqttTopic>
                        <mqttQos>1</mqttQos>
                        <messageHandlingOptions>MQTTMessagePerSubscription</messageHandlingOptions>
                        <includeTagNames>true</includeTagNames>
                        <includeTimestamp>false</includeTimestamp>
                        <mqttUserProperties>
                            <mqttUserPropertie>
                                <name>my-name</name>
                                <value>my-value</value>
                            </mqttUserPropertie>
                        </mqttUserProperties>
                    </simulationToMqttMapping>
                    <simulationToMqttMapping>
                        <mqttTopic>my/topic/2</mqttTopic>
                        <mqttQos>1</mqttQos>
                        <messageHandlingOptions>MQTTMessagePerSubscription</messageHandlingOptions>
                        <includeTagNames>true</includeTagNames>
                        <includeTimestamp>false</includeTimestamp>
                        <mqttUserProperties>
                            <mqttUserPropertie>
                                <name>my-name</name>
                                <value>my-value</value>
                            </mqttUserPropertie>
                        </mqttUserProperties>
                    </simulationToMqttMapping>
                </simulationToMqttMappings>
            </simulationToMqtt>
        </simulation>
    </protocol-adapters>
</hivemq>
