{
  "all": true,
  "report-dir": "./coverage-cypress-matrix",
  "temp-dir": "./.nyc_output/matrix",
  "extends": "@istanbuljs/nyc-config-typescript",
  "check-coverage": false,
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": [
    "cypress/**/*.*",
    "**/*.d.ts",
    "**/*.cy.tsx",
    "**/*.cy.ts",
    "**/*.spec.tsx",
    "**/*.spec.ts",
    "**/*.test.tsx",
    "**/*.test.ts",
    "src/__test-utils__/**/*",
    "public/mockServiceWorker.js",
    "dist/**/*",
    "build/**/*"
  ],
  "reporter": ["json", "lcovonly"]
}
