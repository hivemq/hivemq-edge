<hivemq>
    <protocol-adapters>
        <s7>
            <id>my-s7-protocol-adapter</id>
            <port>1234</port>
            <host>my.s7-server.com</host>
            <controllerType>S7_400</controllerType>
            <s7ToMqtt>
                <s7ToMqttMappings>
                    <s7ToMqttMapping>
                        <mqttTopic>my/topic</mqttTopic>
                        <qos>1</qos>
                        <tagName>tag-name</tagName>
                        <tagAddress>tag-address</tagAddress>
                        <dataType>BOOL</dataType>
                    </s7ToMqttMapping>
                </s7ToMqttMappings>
            </s7ToMqtt>
        </s7>
    </protocol-adapters>
</hivemq>
