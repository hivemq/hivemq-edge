<hivemq>
    <protocol-adapters>
        <protocol-adapter>
            <adapterId>my-protocol-adapter</adapterId>
            <protocolId>http</protocolId>
            <config>
                <httpConnectTimeoutSeconds>50</httpConnectTimeoutSeconds>
                <allowUntrustedCertificates>true</allowUntrustedCertificates>
                <httpToMqtt>
                    <pollingIntervalMillis>1773</pollingIntervalMillis>
                    <maxPollingErrorsBeforeRemoval>13</maxPollingErrorsBeforeRemoval>
                    <httpPublishSuccessStatusCodeOnly>true</httpPublishSuccessStatusCodeOnly>
                    <assertResponseIsJson>false</assertResponseIsJson>
                </httpToMqtt>
            </config>
            <toEdgeMappings>
                <toEdgeMapping>
                    <tagName>tag3</tagName>
                    <topicFilter>my/#</topicFilter>
                    <maxQos>0</maxQos>
                </toEdgeMapping>
                <toEdgeMapping>
                    <tagName>tag4</tagName>
                    <topicFilter>my/#</topicFilter>
                    <maxQos>1</maxQos>
                </toEdgeMapping>
            </toEdgeMappings>
            <fromEdgeMappings>
                <fromEdgeMapping>
                    <tagName>tag1</tagName>
                    <topic>my/destination</topic>
                    <maxQos>0</maxQos>
                    <mqttUserProperties>
                        <mqttUserProperty>
                            <name>name</name>
                            <value>value1</value>
                        </mqttUserProperty>
                        <mqttUserProperty>
                            <name>name</name>
                            <value>value2</value>
                        </mqttUserProperty>
                    </mqttUserProperties>
                </fromEdgeMapping>
                <fromEdgeMapping>
                    <tagName>tag2</tagName>
                    <topic>my/destination2</topic>
                    <maxQos>0</maxQos>
                    <mqttUserProperties>
                        <mqttUserProperty>
                            <name>name</name>
                            <value>value1</value>
                        </mqttUserProperty>
                        <mqttUserProperty>
                            <name>name</name>
                            <value>value2</value>
                        </mqttUserProperty>
                    </mqttUserProperties>
                </fromEdgeMapping>
            </fromEdgeMappings>
            <tags>
                <tag>
                    <name>tag1</name>
                    <description>description1</description>
                    <definition>
                        <url>http://lol1.com</url>
                        <httpRequestMethod>GET</httpRequestMethod>
                        <httpRequestTimeoutSeconds>50</httpRequestTimeoutSeconds>
                        <httpRequestBodyContentType>YAML</httpRequestBodyContentType>
                        <httpRequestBody>my-body</httpRequestBody>
                        <httpHeaders>
                            <httpHeader>
                                <name>foo 1</name>
                                <value>bar 1</value>
                            </httpHeader>
                            <httpHeader>
                                <name>foo 2</name>
                                <value>bar 2</value>
                            </httpHeader>
                        </httpHeaders>
                    </definition>
                </tag>
                <tag>
                    <name>tag2</name>
                    <description>description2</description>
                    <definition>
                        <url>http://lol2.com</url>
                        <httpRequestMethod>GET</httpRequestMethod>
                        <httpRequestTimeoutSeconds>50</httpRequestTimeoutSeconds>
                        <httpRequestBodyContentType>YAML</httpRequestBodyContentType>
                        <httpRequestBody>my-body2</httpRequestBody>
                        <httpHeaders>
                            <httpHeader>
                                <name>foo 1</name>
                                <value>bar 1</value>
                            </httpHeader>
                            <httpHeader>
                                <name>foo 2</name>
                                <value>bar 2</value>
                            </httpHeader>
                        </httpHeaders>
                    </definition>
                </tag>
                <tag>
                    <name>tag3</name>
                    <description>description3</description>
                    <definition>
                        <url>http://lol3.com</url>
                        <httpRequestMethod>POST</httpRequestMethod>
                        <httpRequestTimeoutSeconds>59</httpRequestTimeoutSeconds>
                        <httpHeaders>
                            <httpHeader>
                                <name>foo 1</name>
                                <value>bar 1</value>
                            </httpHeader>
                            <httpHeader>
                                <name>foo 2</name>
                                <value>bar 2</value>
                            </httpHeader>
                        </httpHeaders>
                    </definition>
                </tag>
                <tag>
                    <name>tag4</name>
                    <description>description4</description>
                    <definition>
                        <url>http://lol4.com</url>
                        <httpRequestMethod>PUT</httpRequestMethod>
                        <httpRequestTimeoutSeconds>58</httpRequestTimeoutSeconds>
                        <httpHeaders>
                            <httpHeader>
                                <name>foo 1</name>
                                <value>bar 1</value>
                            </httpHeader>
                            <httpHeader>
                                <name>foo 2</name>
                                <value>bar 2</value>
                            </httpHeader>
                        </httpHeaders>
                    </definition>
                </tag>
            </tags>
        </protocol-adapter>
    </protocol-adapters>
</hivemq>
